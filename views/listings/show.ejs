<% layout("/layouts/boilerplate") %>

<div class="container my-4">

  <!-- TITLE -->
  <div class="row mb-3">
    <div class="col-12">
      <h3><%= listing.title %></h3>
    </div>
  </div>

  <!-- LISTING CARD -->
  <div class="row justify-content-center">
    <div class="col-12 col-md-8 col-lg-6">
      <div class="card show-card listing-card">
        <img
          src="<%= listing.image?.url || 'https://images.unsplash.com/photo-1507525428034-b723cf961d3e?auto=format&fit=crop&w=800&q=80' %>"
          class="card-img-top"
          alt="<%= listing.title %>"
        />

        <div class="card-body p-3">
          <p class="mb-1"><i>Owned by <%= listing.owner.username %></i></p>
          <p class="mb-1"><%= listing.description %></p>
          <p class="mb-1">₹ <%= listing.price.toLocaleString("en-IN") %></p>
          <p class="mb-0"><%= listing.location %>, <%= listing.country %></p>
        </div>
      </div>
    </div>
  </div>

 <!-- OWNER BUTTONS -->
<% if (currUser && listing.owner._id.equals(currUser._id)) { %>
  <div class="row mt-3 justify-content-center">
    <div class="col-12 col-md-8 col-lg-6">
      
      <div class="btns">
        <a href="/listings/<%= listing._id %>/edit" class="btn btn-danger edit-btn text-white">
          Edit
        </a>

        <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
          <button class="btn btn-dark">Delete</button>
        </form>
      </div>

    </div>
  </div>
<% } %>

 


  <hr class="my-4" />

  <!-- REVIEW FORM -->
  <% if (currUser) { %>
    <div class="row justify-content-center">
      <div class="col-12 col-md-8 col-lg-6">
        <h4>Leave a Review</h4>

        <form action="/listings/<%= listing._id %>/reviews" method="POST" novalidate class="needs-validation">

          <!-- ⭐ STAR RATING -->
          <fieldset class="starability-slot mb-3">
            <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
            <input type="radio" id="first-rate1" name="review[rating]" value="1" />
            <label for="first-rate1" title="Terrible">1 star</label>

            <input type="radio" id="first-rate2" name="review[rating]" value="2" />
            <label for="first-rate2" title="Not good">2 stars</label>

            <input type="radio" id="first-rate3" name="review[rating]" value="3" />
            <label for="first-rate3" title="Average">3 stars</label>

            <input type="radio" id="first-rate4" name="review[rating]" value="4" />
            <label for="first-rate4" title="Very good">4 stars</label>

            <input type="radio" id="first-rate5" name="review[rating]" value="5" />
            <label for="first-rate5" title="Amazing">5 stars</label>
          </fieldset>

          <div class="mb-3">
            <label class="form-label">Comments</label>
            <textarea name="review[comment]" class="form-control" rows="4" required></textarea>
            <div class="invalid-feedback">Please submit some comments for reviews.</div>
          </div>

          <button class="btn btn-outline-dark submit-btn">Submit</button>
        </form>
      </div>
    </div>
  <% } %>

  

  <!-- ALL REVIEWS -->
  <div class="row justify-content-center">
    <div class="col-12 col-md-10">
      <h5>All Reviews</h5>

      <div class="row">
        <% for (let review of listing.reviews) { %>
          <div class="col-12 col-md-6 col-lg-4 mb-3">
            <div class="card review-card h-100">
              <div class="card-body">
                <h6 class="card-title mb-1">@<%= review.author.username %></h6>

                <p class="starability-result mb-2" data-rating="<%= review.rating %>"></p>

                <p class="card-text mb-2"><%= review.comment %></p>

                <% if(currUser && review.author._id.equals(currUser._id)) { %>
                  <form method="POST"
                    action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                    <button class="btn btn-sm btn-dark">Delete</button>
                  </form>
                <% } %>

              </div>
            </div>
          </div>
        <% } %>
      </div>
    </div>
  </div>

</div>
